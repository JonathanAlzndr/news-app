<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="24dp"
    android:background="@drawable/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.WelcomeActivity">

    <TextView
        android:id="@+id/tv_stay_updated"
        android:layout_width="match_parent"
        android:layout_marginBottom="120dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/stay_updated"/>

    <TextView
        android:id="@+id/tv_welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_stay_updated"
        app:layout_constraintEnd_toEndOf="@id/tv_stay_updated"
        app:layout_constraintTop_toBottomOf="@id/tv_stay_updated"
        android:layout_marginBottom="90dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="@string/welcome_text"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="@id/tv_welcome_text"
        app:layout_constraintEnd_toEndOf="@id/tv_welcome_text"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_text"
        android:layout_marginBottom="16dp"
        android:text="@string/get_started"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>